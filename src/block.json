{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "dblocks/dblocks-codepro",
	"version": "1.2.5",
	"title": "Code Pro",
	"category": "dblocks",
	"description": "HTML and Syntax Highlighter",
	"variations": [
		{
			"name": "code-executor",
			"title": "Code Executor",
			"description": "Execute and preview HTML code",
			"icon": "media-code",
			"attributes": {
				"syntaxHighlight": false,
				"viewMode": "split",
				"scaleHeightWithContent": false
			},
			"scope": ["block", "inserter", "transform"]
		},
		{
			"name": "syntax-highlighter",
			"title": "Syntax Highlighter",
			"description": "Display code with syntax highlighting",
			"icon": "editor-code",
			"attributes": {
				"syntaxHighlight": true,
				"viewMode": "preview",
				"scaleHeightWithContent": true
			},
			"scope": ["block", "inserter", "transform"]
		}
	],
	"supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		]
	},
	"attributes": {
		"content": {
			"type": "string",
			"default": "Write HTML..."
		},
		"viewMode": {
			"type": "string",
			"default": "preview"
		},
		"theme": {
			"type": "string",
			"default": "vs-light"
		},
		"syntaxHighlight": {
			"type": "boolean",
			"default": false
		},
		"syntaxHighlightTheme": {
			"type": "string",
			"default": "light"
		},
		"editorLanguage": {
			"type": "string",
			"default": "html"
		},
		"editorFontSize": {
			"type": "string",
			"default": "14px"
		},
		"useWrapper": {
			"type": "boolean",
			"default": true
		},
		"editorHeight": {
			"type": "string",
			"default": "500px"
		},
		"scaleHeightWithContent": {
			"type": "boolean",
			"default": false
		},
		"displayLanguage": {
			"type": "boolean",
			"default": true
		},
		"copyButton": {
			"type": "boolean",
			"default": true
		}
	},
	"textdomain": "dblocks-codepro",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}